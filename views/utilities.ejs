<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="css/main.css"/>
    
    <title>Thunders</title>
  </head>
  <body>
    <%- include('header'); -%>
    <br>

    <div class="jumbotron container">
      <div class="accordion" id="accordionExample">
        <div class="card">
          <div class="card-header" id="headingOne">
            <h2 class="mb-0">
              <button class="btn btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                <b>Legal Document Generator</b>
              </button>
            </h2>
          </div>
      
          <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">

                <div class="form-row">
                  <div class="form-group col-md-4">
                    <label for="prospectName">Prospect name</label>
                    <input type="text" class="form-control" id="prospectName" required>
                  </div>
                  
                  <div class="form-group col-md-8">
                    <label for="prospectAddress">Prospect Address</label>
                    <input type="text" class="form-control" id="prospectAddress" required>
                  </div>
                </div>
                
                <div class="form-row">
                  <div class="form-group col-md-4">
                    <label for="irID">IR ID</label>
                      <input type="text" class="form-control" id="irID" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="amt">Amount</label>
                    <input type="text" class="form-control" id="amt" placeholder="5" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="amtWords">Amount in words</label>
                    <input type="text" class="form-control" id="amtWords" placeholder="Five Lakhs" required>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="bankName">Bank name</label>
                    <input type="text" class="form-control" id="bankName" placeholder="ICICI BANK" required>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="bankAcc">Account number</label>
                    <input type="text" class="form-control" id="bankAcc" required>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-4">
                    <label for="irName">IR name</label>
                    <input type="text" class="form-control" id="irName" required>
                  </div>
                  <div class="form-group col-md-8">
                    <label for="irAddress">IR address</label>
                    <input type="text" class="form-control" id="irAddress" required>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-3">
                    <label for="product1">Product 1</label>
                    <input type="text" class="form-control" id="product1" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="product2">Product 2</label>
                    <input type="text" class="form-control" id="product2">
                  </div>
                  <div class="form-group col-md-3">
                    <label for="product3">Product 3</label>
                    <input type="text" class="form-control" id="product3">
                  </div>
                  <div class="form-group col-md-3">
                    <label for="product4">Product 4</label>
                    <input type="text" class="form-control" id="product4">
                  </div>
                  
                </div>

                <button onclick="generateLegalDoc()" class="btn btn-primary">Generate</button>
                <br>
                <br>
                <div id="legalDocResult" class="hide">
                  <a class="legal" href="legal/LEGAL.docx">Download Legal Document</a>
                  <br>
                  <a class="declaration" href="legal/LEGAL.docx">Download Declaration</a>
                </div>
                

            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" id="headingOne">
            <h2 class="mb-0">
              <button class="btn btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseOne">
                <b>Upload data from Excel</b>
              </button>
            </h2>
          </div>
      
          <div id="collapseTwo" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">

                <p>Upload data from excel sheet</p>
                

            </div>
          </div>
        </div>
        
      </div>
      
    
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/bf90461460.js" crossorigin="anonymous"></script>
    <script src="scripts/legaldocs.js"></script>
  </body>
</html>